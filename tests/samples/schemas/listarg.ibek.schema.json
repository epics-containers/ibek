{
  "$defs": {
    "ibek_repeat": {
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "ibek.repeat",
          "description": "A repeating entity",
          "enum": [
            "ibek.repeat"
          ],
          "title": "Type",
          "type": "string"
        },
        "entity_enabled": {
          "default": true,
          "description": "enable or disable this entity instance",
          "title": "Entity Enabled",
          "type": "boolean"
        },
        "variable": {
          "default": "index",
          "description": "The variable name to use for the index in the values list",
          "title": "Variable",
          "type": "string"
        },
        "values": {
          "anyOf": [
            {
              "description": "jinja that renders to <class 'list'>",
              "pattern": ".*\\{\\{.*\\}\\}.*",
              "type": "string"
            },
            {
              "description": "A list of values to use for the variable in the entity",
              "items": {},
              "type": "array"
            }
          ],
          "description": "union of <class 'list'> and jinja representation of {typ}",
          "title": "Values"
        },
        "entity": {
          "anyOf": [
            {
              "description": "jinja that renders to <class 'dict'>",
              "pattern": ".*\\{\\{.*\\}\\}.*",
              "type": "string"
            },
            {
              "description": "The entity to repeat",
              "type": "object"
            }
          ],
          "description": "union of <class 'dict'> and jinja representation of {typ}",
          "title": "Entity"
        }
      },
      "required": [
        "type",
        "values",
        "entity"
      ],
      "title": "ibek_repeat",
      "type": "object"
    },
    "listtest_lister": {
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "listtest.lister",
          "description": "The protagonist from Red Dwarf",
          "enum": [
            "listtest.lister"
          ],
          "title": "Type",
          "type": "string"
        },
        "entity_enabled": {
          "default": true,
          "description": "enable or disable this entity instance",
          "title": "Entity Enabled",
          "type": "boolean"
        },
        "age": {
          "anyOf": [
            {
              "description": "jinja that renders to <class 'int'>",
              "pattern": ".*\\{\\{.*\\}\\}.*",
              "type": "string"
            },
            {
              "description": "Age of the character including cryogenic sleep",
              "type": "integer"
            }
          ],
          "default": "{{ 29 + cryo_years }}",
          "description": "union of <class 'int'> and jinja representation of {typ}",
          "title": "Age"
        },
        "quote": {
          "default": "Smoke me a kipper, I'll be back for breakfast",
          "description": "most hated quote",
          "title": "Quote",
          "type": "string"
        },
        "height": {
          "anyOf": [
            {
              "description": "jinja that renders to <class 'float'>",
              "pattern": ".*\\{\\{.*\\}\\}.*",
              "type": "string"
            },
            {
              "description": "height of the character in cm",
              "type": "number"
            }
          ],
          "default": 180.0,
          "description": "union of <class 'float'> and jinja representation of {typ}",
          "title": "Height"
        },
        "is_human": {
          "anyOf": [
            {
              "description": "jinja that renders to <class 'bool'>",
              "pattern": ".*\\{\\{.*\\}\\}.*",
              "type": "string"
            },
            {
              "description": "is the character human",
              "type": "boolean"
            }
          ],
          "default": "{{ name == 'Dave Lister' }}",
          "description": "union of <class 'bool'> and jinja representation of {typ}",
          "title": "Is Human"
        }
      },
      "required": [
        "type"
      ],
      "title": "listtest_lister",
      "type": "object"
    }
  },
  "additionalProperties": false,
  "properties": {
    "ioc_name": {
      "description": "Name of IOC instance",
      "title": "Ioc Name",
      "type": "string"
    },
    "description": {
      "description": "Description of what the IOC does",
      "title": "Description",
      "type": "string"
    },
    "entities": {
      "description": "List of entities this IOC instantiates",
      "items": {
        "discriminator": {
          "mapping": {
            "ibek.repeat": "#/$defs/ibek_repeat",
            "listtest.lister": "#/$defs/listtest_lister"
          },
          "propertyName": "type"
        },
        "oneOf": [
          {
            "$ref": "#/$defs/listtest_lister"
          },
          {
            "$ref": "#/$defs/ibek_repeat"
          }
        ]
      },
      "title": "Entities",
      "type": "array"
    },
    "shared": {
      "default": [],
      "description": "A place to create any anchors required for repeating YAML",
      "items": {},
      "title": "Shared",
      "type": "array"
    }
  },
  "required": [
    "ioc_name",
    "description",
    "entities"
  ],
  "title": "NewIOC",
  "type": "object"
}
